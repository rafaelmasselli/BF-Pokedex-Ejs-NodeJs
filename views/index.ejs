<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home pokedex</title>
  <link rel="icon" href="/IMG/icon.jpg">
  <link rel="stylesheet" href="CSS/style.css">
</head>
<body>
  <% if(message !="" ) { %>
    <section id="message">
      <p>
        <%= message %>
      </p> <span id="close">&times;</span>
    </section>
    <% } %>
<header class="topnav">
  <nav>
      <a href="/">Home</a>
      <a href="/Cadastro">Cadastrar</a>
  </nav>
</header>
<section class = "Container-Cards">
      <% Pokedex.forEach((item, id)=> { %>
          <div class="Card">    
              <a class="NoneLink" href="/detalhes/<%=id%>">
                 <p class="fonts" ><%= item.Nome%> </p>
                  <img src="<%= item.Image %>" height="180" width="180" />
                 <p class = "fonts"> Tipo: <%= item.Tipo%> </p
               </a>
            </div>
       <% }) %>
 </section>
<script type="text/javascript" src="js/script.js"></script>
</body>

</html>
